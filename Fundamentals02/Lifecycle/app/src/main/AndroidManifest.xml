<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apost.example.com.Lifecycle">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="apost.example.com.Lifecycle.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="apost.example.com.Lifecycle.SecondActivity"
            android:label="@string/activity2_name"
            android:parentActivityName="apost.example.com.Lifecycle.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="apost.example.com.Lifecycle.apost.example.com.Lifecycle.MainActivity" />
        </activity>
    </application>

</manifest>